@using Microsoft.AspNetCore.Identity
@model IEnumerable<RoleEditModel>

@{
    ViewBag.Title = "Roles";
}

<h2>Index</h2>

<div class="panel panel-primary">
    <div class="panel-heading">Roles</div>
    <table class="table table-striped">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">No roles</td>
            </tr>
        }
        else
        {
            foreach (RoleEditModel role in Model)
            {
                <tr>
                    <td>@role.Role.Name</td>
                    <td>
                        @if (role.RoleMembers == null || role.RoleMembers.Count() == 0)
                        {
                            @: No Users in role
                        }
                        else
                        {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        First Name
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        Id
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in role.RoleMembers)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-controller="Account"
                                               asp-route-id="@item.Id">
                                                Edit User Information 
                                            </a>
                                            |
                                            <a asp-action="ChangePassword" asp-controller="Account"
                                               asp-route-id="@item.Id">
                                                Change Password |
                                            </a>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>