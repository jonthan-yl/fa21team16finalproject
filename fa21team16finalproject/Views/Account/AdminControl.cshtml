@model IEnumerable<fa21team16finalproject.Models.AppUser>

@{
    ViewData["Title"] = "Index";
}

<table class="table">

        <thead>
            <tr>
                <th>
                    Email
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Still an Employee
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @if (item.IsActive == true)
                    {
                        <a asp-action="ConfirmFire" asp-route-id="@item.Id">Fire</a>
                    }
                    else
                    {
                        <a asp-action="ConfirmRehire" asp-route-id="@item.Id">Rehire</a>
                    }
                </td>
            </tr>

            }
        </tbody>
    </table>
<a asp-action="Register">Hire New Admin</a>